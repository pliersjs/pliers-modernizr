{
  "name": "pliers-modernizr",
  "version": "0.2.1",
  "description": "Use Pliers to build a modular Modernizr file using a custom config",
  "author": "Jack Brewer",
  "license": "BSD",
  "repository": {
    "type": "git",
    "url": "https://github.com/pliersjs/pliers-modernizr.git"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "main": "pliers-modernizr.js",
  "scripts": {
    "lint": "jshint .",
    "checkStyle": "jscs .",
    "pretest": "npm run lint && npm run checkStyle",
    "test": "istanbul cover _mocha -- -R spec",
    "posttest": "istanbul check-coverage && rm -rf coverage",
    "prepublish": "npm test && npm prune"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "modernizr": "^3.0.0",
    "uglify-js": "^2.4.24"
  },
  "devDependencies": {
    "async": "^1.4.2",
    "istanbul": "^0.3.10",
    "jscs": "^2.1.1",
    "jshint": "^2.5.5",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.3",
    "pliers": "^1.2.1",
    "rimraf": "^2.4.3"
  }
}
